<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical" android:id="@+id/gridItemLayout">
	<ViewSwitcher android:layout_width="match_parent"
		android:layout_height="fill_parent" android:id="@+id/gridItemViewSwitcher">
		<LinearLayout android:id="@+id/linearLayoutProgressBar"
			android:layout_gravity="center_vertical|center_horizontal"
			android:orientation="vertical" android:layout_width="match_parent"
			android:layout_height="wrap_content">
			<ProgressBar android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:id="@+id/progressBar1"
				android:layout_gravity="center_vertical|center_horizontal|center"></ProgressBar>
		</LinearLayout>
		<LinearLayout android:layout_height="fill_parent"
			android:id="@+id/linearLayoutImage" android:background="#FFFF00"
			android:orientation="vertical" android:layout_width="match_parent" android:padding="2dp">
			<LinearLayout android:id="@+id/linearLayout1"
				android:layout_width="match_parent" android:layout_height="160dp"
				android:orientation="vertical">
				<ImageView android:layout_width="100dp"
					android:adjustViewBounds="true" android:scaleType="fitCenter"
					android:layout_height="120dp" android:src="@drawable/background"
					android:layout_gravity="top|center_horizontal" android:id="@+id/ivFoto"></ImageView>
				<TextView android:layout_height="wrap_content"
					android:text="TextView" android:layout_width="wrap_content" android:maxLines="2"
					android:layout_gravity="center_horizontal" android:textSize="15dp"
					android:textStyle="bold" android:textColor="#000000" android:id="@+id/tvApelido"></TextView>
			</LinearLayout>
		</LinearLayout>
	</ViewSwitcher>

</LinearLayout>
