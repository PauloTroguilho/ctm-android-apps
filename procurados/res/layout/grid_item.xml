<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/gridItemLayout" android:layout_width="wrap_content"
	android:orientation="vertical"
	android:background="#F8F400" android:gravity="top|center_horizontal" android:layout_height="170dp" android:padding="3dp">

	<ImageView android:id="@+id/grid_item_image" android:scaleType="fitCenter"
		android:layout_width="98dp" android:layout_height="120dp">
	</ImageView>

	<TextView android:id="@+id/grid_item_text"
		android:layout_width="wrap_content" android:layout_height="wrap_content"
		android:text="TextView" android:gravity="center_horizontal"
		android:textColor="#000000" android:textStyle="bold">
	</TextView>

</LinearLayout>