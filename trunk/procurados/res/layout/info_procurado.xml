<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:ads="http://schemas.android.com/apk/lib/com.google.ads"
	android:layout_height="fill_parent" android:layout_width="fill_parent"
	android:orientation="vertical" android:background="@drawable/backgroundtiled">
	
	<LinearLayout android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<com.google.ads.AdView android:id="@+id/adView"
			android:layout_width="wrap_content" android:layout_height="wrap_content"
			ads:adUnitId="a14ea637d9ad423" ads:adSize="BANNER"
			ads:loadAdOnCreate="true">
		</com.google.ads.AdView>
	</LinearLayout>
	<LinearLayout android:padding="10px" android:layout_width="fill_parent" android:fitsSystemWindows="true" android:orientation="vertical" android:layout_height="fill_parent">
		<LinearLayout android:paddingTop="5dp" android:layout_gravity="top|center_horizontal" android:layout_width="fill_parent" android:paddingRight="5dp" android:paddingLeft="5dp" android:paddingBottom="5dp" android:background="#F8F400" android:orientation="vertical" android:layout_height="fill_parent" android:layout_weight="90" android:gravity="top|center_vertical|center_horizontal">
			<ImageView android:id="@+id/ivFoto" android:scaleType="fitCenter" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_weight="80"></ImageView>
			<TextView android:textColor="#000000" android:gravity="center_horizontal|center" android:text="@string/test_nome" android:textSize="18dp" android:id="@+id/tvNome" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
			<TextView android:textStyle="bold" android:textColor="#000000" android:gravity="center_horizontal|center" android:text="@string/test_apelido" android:textSize="18dp" android:id="@+id/tvApelido" android:layout_gravity="center_horizontal" android:layout_width="wrap_content" android:layout_height="wrap_content"></TextView>
		</LinearLayout>
		<LinearLayout android:paddingTop="5dp" android:layout_width="fill_parent" android:paddingBottom="3dp" android:background="#FFFF88" android:gravity="center_vertical|center_horizontal" android:layout_height="wrap_content">
			<Button android:id="@+id/btDetalhes" android:layout_width="wrap_content" android:text="@string/bt_info" android:layout_height="wrap_content"></Button>
			<Button android:id="@+id/btCompartilhar" android:layout_width="wrap_content" android:text="@string/bt_compartilhar" android:layout_height="wrap_content"></Button>
		</LinearLayout>
	</LinearLayout>

</LinearLayout>