<?xml version="1.0" encoding="utf-8" standalone="no"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
	xmlns:web="http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" version="2.5"
	xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd">
	<welcome-file-list>
		<welcome-file>index.html</welcome-file>
	</welcome-file-list><!-- ***** Designate client-side state saving. ***** -->
	<context-param>
		<param-name>javax.faces.STATE_SAVING_METHOD</param-name>
		<param-value>client</param-value>
	</context-param>
	<!-- Set the default suffix for JSF pages to .xhtml -->
	<context-param>
		<param-name>javax.faces.DEFAULT_SUFFIX</param-name>
		<param-value>.xhtml</param-value>
	</context-param>
	<context-param>
		<param-name>javax.faces.PROJECT_STAGE</param-name>
		<param-value>Production</param-value>
	</context-param>

	<!-- Disable use of threading for single-threaded environments such as the 
		Google AppEngine. -->
	<context-param>
		<param-name>com.sun.faces.enableThreading</param-name>
		<param-value>false</param-value>
		<description>
			When enabled, the runtime initialization and default ResourceHandler
			implementation will use threads to perform their functions. Set this
			value to false if threads aren't desired (as in the case of running
			within the Google Application Engine).

			Note that when this option is disabled, the ResourceHandler will not
			pick up new versions of resources when ProjectStage is development.
		</description>
	</context-param>
	<!-- ***** Specify Java Unified Expression Language 3.0 Over Default -->
	<context-param>
		<param-name>com.sun.faces.expressionFactory</param-name>
		<param-value>com.sun.el.ExpressionFactoryImpl</param-value>
	</context-param>
	<!-- ***** Load the JavaServer Faces Servlet ***** -->
	<servlet>
		<servlet-name>Faces Servlet</servlet-name>
		<servlet-class>javax.faces.webapp.FacesServlet</servlet-class>
		<load-on-startup>1</load-on-startup>
	</servlet>
	<servlet-mapping>
		<servlet-name>Faces Servlet</servlet-name>
		<url-pattern>/faces/*</url-pattern>
		<url-pattern>*.jsf</url-pattern>
	</servlet-mapping>

	<servlet>
		<servlet-name>CarregarProcessoServlet</servlet-name>
		<servlet-class>com.ctm.eadvogado.servlets.CarregarProcessoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>CarregarProcessoServlet</servlet-name>
		<url-pattern>/carregarProcesso</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>AtualizarProcessosServlet</servlet-name>
		<servlet-class>com.ctm.eadvogado.servlets.AtualizarProcessosServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AtualizarProcessosServlet</servlet-name>
		<url-pattern>/atualizarProcessos</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ConsultarProcessoAsyncServlet</servlet-name>
		<servlet-class>com.ctm.eadvogado.servlets.ConsultarProcessoAsyncServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ConsultarProcessoAsyncServlet</servlet-name>
		<url-pattern>/consultarProcessoAsync</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>NotificarMovimentacaoServlet</servlet-name>
		<servlet-class>com.ctm.eadvogado.servlets.NotificarMovimentacaoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>NotificarMovimentacaoServlet</servlet-name>
		<url-pattern>/notificarMovimentacao</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>SendMailServlet</servlet-name>
		<servlet-class>com.ctm.eadvogado.servlets.SendMailServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>SendMailServlet</servlet-name>
		<url-pattern>/sendMail</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>EnviarNotificacaoServlet</servlet-name>
		<servlet-class>com.ctm.eadvogado.servlets.EnviarNotificacaoServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>EnviarNotificacaoServlet</servlet-name>
		<url-pattern>/enviarNotificacao</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ConsultarTiposDocumentosServlet</servlet-name>
		<servlet-class>com.ctm.eadvogado.servlets.ConsultarTiposDocumentosServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ConsultarTiposDocumentosServlet</servlet-name>
		<url-pattern>/consultarTiposDocumentos</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>AtualizarTiposDocumentosServlet</servlet-name>
		<servlet-class>com.ctm.eadvogado.servlets.AtualizarTiposDocumentosServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>AtualizarTiposDocumentosServlet</servlet-name>
		<url-pattern>/atualizarTiposDocumentos</url-pattern>
	</servlet-mapping>
	
	<servlet>
		<servlet-name>ResetTiposDocumentosServlet</servlet-name>
		<servlet-class>com.ctm.eadvogado.servlets.ResetTiposDocumentosServlet</servlet-class>
	</servlet>
	<servlet-mapping>
		<servlet-name>ResetTiposDocumentosServlet</servlet-name>
		<url-pattern>/resetTiposDocumentos</url-pattern>
	</servlet-mapping>
	

	<listener>
		<listener-class>com.ctm.eadvogado.listener.ContextListener</listener-class>
	</listener>
	<!-- ***** Specify session timeout of thirty (30) minutes. ***** -->
	<session-config>
		<session-timeout>30</session-timeout>
	</session-config>
	<welcome-file-list>
		<welcome-file>index.jsp</welcome-file>
		<welcome-file>index.xhtml</welcome-file>
		<welcome-file>index.html</welcome-file>
		<welcome-file>welcome.xhtml</welcome-file>
	</welcome-file-list>
	<servlet>
		<servlet-name>SystemServiceServlet</servlet-name>
		<servlet-class>com.google.api.server.spi.SystemServiceServlet</servlet-class>
		<init-param>
			<param-name>services</param-name>
			<param-value>com.ctm.eadvogado.endpoints.CompraEndpoint,com.ctm.eadvogado.endpoints.DeviceEndpoint,com.ctm.eadvogado.endpoints.ProcessoEndpoint,com.ctm.eadvogado.endpoints.TribunalEndpoint,com.ctm.eadvogado.endpoints.UsuarioEndpoint</param-value>
		</init-param>
	</servlet>
	<servlet-mapping>
		<servlet-name>SystemServiceServlet</servlet-name>
		<url-pattern>/_ah/spi/*</url-pattern>
	</servlet-mapping>
	
	<security-constraint>
        <web-resource-collection>
            <url-pattern>/cron/*</url-pattern>
        </web-resource-collection>
        <auth-constraint>
            <role-name>admin</role-name>
        </auth-constraint>
    </security-constraint>
</web-app>